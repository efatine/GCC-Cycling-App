<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClubOwner">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ExtraText">>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#5BBDEA"
                android:backgroundTint="#8AB8DC"
                android:gravity="center"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/admin_welcomeText"
                android:layout_width="300dp"
                android:layout_height="131dp"
                android:layout_gravity="center"
                android:layout_marginStart="55dp"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="56dp"
                android:gravity="center"
                android:textColor="#F8F7F7"
                android:textColorHint="#F3F2F2"
                android:text="Welcome!"
                android:textSize="35sp"
                />

            <EditText
                android:id="@+id/clubName"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:ems="10"
                android:gravity="center"
                android:hint="Club Name"
                android:inputType="text"
                android:textColor="#F8F7F7"
                android:textColorHint="#F3F2F2"/>
            <EditText
                android:id="@+id/clubDescription"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:ems="10"
                android:gravity="center"
                android:hint="Description"
                android:inputType="text"
                android:textColor="#F8F7F7"
                android:textColorHint="#F3F2F2"/>

            <EditText
                android:id="@+id/clubLocation"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:ems="10"
                android:gravity="center"
                android:hint="Location"
                android:inputType="text"
                android:textColor="#F8F7F7"
                android:textColorHint="#F3F2F2"/>
            <EditText
                android:id="@+id/clubContactNumber"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:ems="10"
                android:gravity="center"
                android:hint="Contact Number"
                android:inputType="text"
                android:textColor="#F8F7F7"
                android:textColorHint="#F3F2F2"/>

            <EditText
                android:id="@+id/clubSocialMedia"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:ems="10"
                android:gravity="center"
                android:hint="Social Media"
                android:inputType="text"
                android:textColor="#F8F7F7"
                android:textColorHint="#F3F2F2"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <Button
                android:id="@+id/saveProfileButton"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:backgroundTint="#8AB8DC"
                android:text="Save/Edit Profile" />

            <Button
                android:id="@+id/clubOwnerBackButton"
                android:layout_width="251dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:backgroundTint="#8AB8DC"
                android:text="Go Back" />

            <Button
                android:id="@+id/manageParticipantsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Participants"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
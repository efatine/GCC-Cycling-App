<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParticipantEventView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/appName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5BBDEA"
            android:backgroundTint="#8AB8DC"

            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/searchEventName"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:textColor="#F8F7F7"
            android:textColorHint="#F3F2F2"
            android:layout_gravity="center"
            android:ems="10"

            android:gravity="center"
            android:hint="Event Name"
            android:inputType="text" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/searchEventButton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#8AB8DC"
            android:text="Search" />
        <Button
            android:id="@+id/ParticipantDashboardButton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#8AB8DC"
            android:text="Dashboard" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <ListView
            android:id="@+id/listOfEvents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#F8F7F7"
            android:textColorHint="#F3F2F2"
            android:layout_gravity="center|center_horizontal" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>